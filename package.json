{
  "name": "KOVAN",
  "version": "1.1.0",
  "description": "Laragon'dan daha güçlü, çapraz platform destekli lokal geliştirme ortamı",
  "main": "dist/main/main.js",
  "author": {
    "name": "Kovan Team",
    "email": "ramiartas0@gmail.com"
  },
  "license": "MIT",
  "keywords": [
    "local-development",
    "laragon-alternative",
    "web-development",
    "php",
    "nodejs",
    "docker",
    "electron",
    "cross-platform"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p src/main/tsconfig.json && electron .",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p src/main/tsconfig.json",
    "build:renderer": "vite build",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf dist build",
    "rebuild": "electron-rebuild"
  },
  "dependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "adm-zip": "^0.5.16",
    "better-sqlite3": "^9.6.0",
    "chokidar": "^3.5.3",
    "cross-spawn": "^7.0.3",
    "dockerode": "^4.0.2",
    "electron": "^28.3.3",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "node-ssh": "^13.1.0",
    "path": "^0.12.7",
    "pm2": "^5.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "sqlite3": "^5.1.7",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/chokidar": "^2.1.3",
    "@types/dockerode": "^3.3.21",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "concurrently": "^8.2.2",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.53.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.kovan.dev",
    "productName": "Kovan",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "packages",
        "to": "packages"
      },
      {
        "from": "templates",
        "to": "templates"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "engines": {
    "node": ">=18.0.0 <=20.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/username/kovan.git"
  },
  "bugs": {
    "url": "https://github.com/username/kovan/issues"
  },
  "homepage": "https://kovan.dev"
}
